<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd"
       default-autowire="no" default-lazy-init="true">

    <aop:aspectj-autoproxy proxy-target-class="true"/>
    <context:annotation-config/>
    <context:property-placeholder location="classpath*:application.settings.properties"/>

    <import resource="classpath*:META-INF/application.support.http.context.xml"/>
    <import resource="classpath*:META-INF/application.support.ehcache.context.xml"/>
    <import resource="classpath*:META-INF/application.support.jdbc.context.xml"/>
    <import resource="classpath*:application.support.jpa.context.xml"/>

</beans>